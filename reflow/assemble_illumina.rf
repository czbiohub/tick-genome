param (
    // S3 path to a single fastq(.gz) file
    read1 string

    // S3 path to a single fastq(.gz) file
    read2 string

    // name of the sample
    name string

    // S3 folder to put the assembly
    output string
)


val dirs = make("$/dirs")

val masurca = make("./masurca.rf")

val r1 = file(read1)
val r2 = file(read2)


val masurca_output = masurca.AssemblePairedEndIlluminaOnly(
    r1, r2, name)

val Main = dirs.Copy(masurca_output, output)
